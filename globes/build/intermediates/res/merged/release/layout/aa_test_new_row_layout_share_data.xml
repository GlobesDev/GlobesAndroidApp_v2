<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/rowlayout_white"
    android:orientation="vertical" >

    <!-- android:layout_height="?android:attr/listPreferredItemHeight" -->

    <LinearLayout
        android:id="@+id/layoutShareDataTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewShareSymbol"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="4"
            android:gravity="left"
            android:padding="3dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:textColor="@color/red"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewTrueForDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="2"
            android:gravity="left"
            android:padding="3dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:textColor="@color/red"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutShareDataSubtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageViewUpDownArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/textViewPrecentageChangeInHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="4"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewLastPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/separator" />

    <RelativeLayout
        android:id="@+id/layoutShareData"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000" >

        <ImageView
            android:id="@+id/imageViewGraph"
            android:layout_width="155dp"
            android:layout_height="118dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:padding="3dip" />

        <TextView
            android:id="@+id/textPrecentageChagne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/imageViewGraph"
            android:padding="2dp"
            android:text="שינוי יומי:		"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewPrecentageChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageViewGraph"
            android:layout_toLeftOf="@+id/textPrecentageChagne"
            android:padding="2dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textDailyPointsChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textViewPrecentageChange"
            android:padding="2dp"
            android:text="שינוי בנק&apos;:		"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewDailyPointsChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/textViewPrecentageChange"
            android:layout_below="@id/textViewPrecentageChange"
            android:layout_toLeftOf="@id/textPrecentageChagne"
            android:padding="2dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textShareVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textViewDailyPointsChange"
            android:padding="2dp"
            android:text="נפח מסחר:		"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewShareVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/textViewPrecentageChange"
            android:layout_below="@id/textViewDailyPointsChange"
            android:layout_toLeftOf="@id/textShareVolume"
            android:padding="2dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textDailyHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textViewShareVolume"
            android:padding="2dp"
            android:text="יומי גבוה:		"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewDailyHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/textViewPrecentageChange"
            android:layout_below="@id/textViewShareVolume"
            android:layout_toLeftOf="@id/textDailyHigh"
            android:padding="2dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textDailyLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textViewDailyHigh"
            android:padding="2dp"
            android:text="יומי נמוך:		"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewDailyLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/textViewPrecentageChange"
            android:layout_below="@id/textViewDailyHigh"
            android:layout_toLeftOf="@id/textDailyLow"
            android:padding="2dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textShareMarketCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textViewDailyLow"
            android:padding="2dp"
            android:text="שווי שוק:		"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewShareMarketCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/textViewPrecentageChange"
            android:layout_below="@id/textViewDailyLow"
            android:layout_toLeftOf="@id/textShareMarketCap"
            android:padding="2dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textTurnToSeeGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textViewShareMarketCap"
            android:padding="2dp"
            android:text="@string/turnToSeeGraph"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageTurnIphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textTurnToSeeGraph"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/textTurnToSeeGraph"
            android:padding="2dp"
            android:paddingTop="5dp"
            android:src="@drawable/turn_iphone" />

        <Button
            android:id="@+id/buttonShare"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/textTurnToSeeGraph"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_share_share"
            android:gravity="bottom"
            android:onClick="buttonShare_onClick" />

        <Button
            android:id="@+id/buttonTogglePfItem"
            android:layout_width="120dp"
            android:layout_height="26dp"
            android:layout_below="@+id/textTurnToSeeGraph"
            android:layout_centerHorizontal="true"
            android:gravity="bottom" />

        <CheckBox
            android:id="@+id/checkBoxAddToLooperFromSharePage"
            android:layout_width="55dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/buttonTogglePfItem"
            android:layout_marginRight="15dp"
            android:button="@drawable/selector_add_stock_to_looper_from_stock_page"
            android:gravity="center" />
    </RelativeLayout>

</LinearLayout>