<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@color/Transparent"
    android:gravity="center_vertical"
    android:padding="1dip" >

    <HorizontalScrollView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/front"
        android:layout_alignTop="@+id/front"
        android:layout_marginRight="32dp"
        android:scrollbars="horizontal"
        android:tag="back" >

        <LinearLayout
            android:id="@+id/contenair_tagiot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/front"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:tag="front" >

        <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/arrow" /> -->

        <ImageView
            android:id="@+id/stockChangeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/stockPercentageChange"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/White"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/stockText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:textColor="@color/White"
            android:textSize="13sp" />
<!-- 
        <CheckBox
            android:id="@+id/checkBoxAddToLooperFromSharesList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:button="@drawable/selector_shares_list_add_to_looper_checkbox"
            android:focusable="false"
            android:focusableInTouchMode="false" /> -->
    </LinearLayout>

</RelativeLayout>