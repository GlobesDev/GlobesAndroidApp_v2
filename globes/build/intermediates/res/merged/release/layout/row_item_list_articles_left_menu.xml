<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_article_slide_tags_off"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_articles_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="right"  android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textView_articles_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="right"  android:textColor="@color/Gray" />
    

</LinearLayout>