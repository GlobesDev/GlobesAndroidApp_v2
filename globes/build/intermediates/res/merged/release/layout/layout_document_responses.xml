<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
	<LinearLayout 
		    android:id="@+id/layoutDocumentResponsesHeader"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:background="@color/rowlayout_group_color"
		    
		    >
		    
				<Button 
				android:id="@+id/buttonAddResponse" 
				android:layout_width="138dp" 
				android:layout_height="39dp" 
				android:layout_marginLeft="10dp" 
				android:gravity="center_vertical" 
				android:background="@color/button_add_response" 
				android:layout_marginBottom="10dp" 
				android:layout_marginTop="10dp" 
				android:layout_gravity="left|center_vertical">
				</Button>
				
				<FrameLayout  android:id="@+id/frameLayoutResponsesCount"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right|center_vertical"
			    android:orientation="vertical">
			    
	   				<TextView 
	   				android:id="@+id/textViewResponsesCount"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="2"
					android:layout_gravity="right|center_vertical"
					android:gravity="left"
					android:padding="10dp" 
					android:textSize="16dp"
					android:textColor="@color/red"
					android:textStyle="bold">
					</TextView>	
					
					<Button android:id="@+id/buttonGoToResponses"  
				    android:layout_width="fill_parent" 
					android:layout_height="fill_parent"
					android:background="@drawable/transparent"
					></Button>			
			</FrameLayout>
		</LinearLayout>	
			

	<ListView 
	android:id="@+id/listViewDocumentResponses" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:layout_weight="6"/>

