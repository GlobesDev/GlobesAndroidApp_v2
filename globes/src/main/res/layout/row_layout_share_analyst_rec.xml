<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@color/rowlayout_white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <HorizontalScrollView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignBottom="@+id/front"
        android:layout_alignTop="@+id/front"
        android:layout_marginRight="32dp"
        android:scrollbars="horizontal"
        android:tag="back" >

        <LinearLayout
            android:id="@+id/contenair_tagiot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/front"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:tag="front" >

        <TextView
            android:id="@+id/textViewRecommendation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="8dp"
            android:paddingRight="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAnalystName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewRecommendationDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:textColor="@color/gray" />
    </LinearLayout>

</RelativeLayout>