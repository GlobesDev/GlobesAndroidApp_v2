<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
   
    android:paddingBottom="2.5dp"
    android:paddingTop="2.5dp" >

    <HorizontalScrollView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/front"
        android:layout_alignTop="@+id/front"
        android:layout_marginRight="50dp"
        android:fillViewport="true"
        android:tag="back" >

        <LinearLayout
            android:id="@+id/contenair_tagiot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical"
        android:tag="front" >

        <ImageView
            android:id="@+id/imageView_big_article_globes_tv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/about"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_big_article_globes_tv"
            android:layout_alignLeft="@+id/imageView_big_article_globes_tv"
            android:layout_alignRight="@+id/imageView_big_article_globes_tv"
            android:background="@drawable/tv_gradient"
            android:contentDescription="@string/about" />

        <TextView
            android:id="@+id/textView_big_article_title_globes_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_big_article_globes_tv"
            android:gravity="right"
            android:textColor="@color/White"
            android:textSize="22sp"
            android:textStyle="bold" 
            android:paddingRight="16dp"
            android:paddingBottom="11dp"
            android:text="globes"
            />

        <Button
            android:id="@+id/face_btn_logo_transperent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/face_btn_logo_transperent" />

    </RelativeLayout>

</RelativeLayout>