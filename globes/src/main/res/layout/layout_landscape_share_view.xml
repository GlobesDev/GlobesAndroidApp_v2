<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/toggleGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/yearlyGraphButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/button_share_graph_yearly_colors"
            android:button="@null" />

        <RadioButton
            android:id="@+id/sixMonthsGraphButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/button_share_graph_six_monthes_colors"
            android:button="@null" />

        <RadioButton
            android:id="@+id/monthlyGraphButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/button_share_graph_monthly_colors"
            android:button="@null" />

        <RadioButton
            android:id="@+id/weeklyGraphButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/button_share_graph_weekly_colors"
            android:button="@null" />

        <RadioButton
            android:id="@+id/dailyGraphButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/button_share_graph_daily_colors"
            android:button="@null"
            android:checked="true" />
    </RadioGroup>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/imageViewBigGraph"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ListView
            android:id="@+id/android:list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadingEdge="none"
            android:visibility="gone" >
        </ListView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical" >

            <ProgressBar
                android:id="@+id/progressBarBigGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </ProgressBar>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>